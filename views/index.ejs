<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('./partials/head'); %>
</head>
<body>
  <%- include('./partials/nav'); %>
  <div id="main-container">
    <% if (playlists) { %>
      <% playlists.forEach((playlist, index) => { %>
        <div class="playlist-item">
          <a href="/playlists/<%= playlist.id %>">
            <img
              src="<%= playlist.images[0]?.url %>"
              width="200"
              height="200"
            />
            <div class="playlist-name"><%= playlist.name %></div>
          </a>
        </div>
      <% }); %>
    <% } %>
  </div>
</body>
<style>
  #main-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    margin: 10px;
  }
  .playlist-item {
    display: inline-flex;
    margin: 5px;
    text-align: center;
  }
  .playlist-name {
    margin: auto 25px;
    text-wrap: wrap;
    text-align: center;
    width: 150px;
  }
</style>
</html>